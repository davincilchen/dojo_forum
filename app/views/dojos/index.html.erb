<h1>KO Dojo</h1>

<table class="table table-hover"> <!-- table-striped table-condensed -->
  <% @dojos.each do |dojo| %>
    <tr>
      <td data-link="<%= dojo_path(dojo) %>"><%= dojo.comments_count %></td>
      <td data-link="<%= dojo_path(dojo) %>"><%= dojo.title %></td>
      <td data-link="<%= dojo_path(dojo) %>"><%= dojo.viewed_count %></td>
    </tr>
  <% end %>
</table>

<script>
  $("td[data-link]").click(function() {
    window.location = $(this).data("link")
  })
</script>
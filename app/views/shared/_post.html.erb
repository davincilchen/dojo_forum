<div class="container">
  <div class="row">
    <div class="dojo-item">
      <div class = "col-md-2 col-md-offset-0">
        <div class="dojo-user-avatar">
          <div class="dojo-user-image">
            <% if dojo.user.avatar? %>
              <%= link_to user_path(dojo.user) do %>
                <%= image_tag dojo.user.avatar, class: "img-responsive  img-rounded" %>
              <% end %>
            <% else %>
               <span class="glyphicon glyphicon-picture"></span>
            <% end %>
            <p><span><%= link_to dojo.user.name, user_path(dojo.user) %></span></p>
          </div>
        </div>
      </div>
      <div class = "col-md-10 col-md-offset-0">
        <div class="caption">
          <div class="post-image">
             <% if dojo.image? %>
                <%= image_tag dojo.image, class: "img-responsive  img-rounded" %>
            <% else %>
               <span class="glyphicon glyphicon-picture"></span>
            <% end %>
          </div>
          <br>
          <p><%= truncate(dojo.description, length: 320)%></p>
        </div>
      </div>
    </div>

    <!-- comments -->
    <% dojo.comments.each do |comment|%>
      <div class="dojo-comment-item">
        <div class = "col-md-2 col-md-offset-0">
          <div class="comment-user-avatar">
            <div class="dojo-user-image">
              <% if comment.user.avatar? %>
                <%= link_to user_path(comment.user) do %>
                  <%= image_tag comment.user.avatar, class: "img-responsive  img-rounded" %>
                <% end %>
              <% else %>
                 <span class="glyphicon glyphicon-picture"></span>
              <% end %>
              <p><span><%= link_to comment.user.name, user_path(comment.user) %></span></p>
            </div>
          </div>
        </div>
        <div class = "col-md-10 col-md-offset-0">
          <div class="comment-caption">
            <p><%= truncate(comment.content, length: 320)%></p>
            <%= link_to dojo_path(dojo,edit_type: "comment",edit_id: comment.id) do %>
              <span class="glyphicon glyphicon-edit"></span>
            <% end %>
            <%= link_to dojo_comment_path(dojo, comment.id), method: :delete, data: {confirm:"Are you sure?"} do %>
              <span class="glyphicon glyphicon-trash"></span>
            <% end %>
          </div>
        </div>
      </div>
    <%end%>

  </div>
</div>
